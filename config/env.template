# Instagram Automation Configuration Template
# Copy this file to .env in the root directory and fill in your values

# ============================================
# REQUIRED SETTINGS
# ============================================

# Target Instagram post URL
INSTAGRAM_POST_URL=https://www.instagram.com/p/your_target_post/

# OpenAI API key for comment generation  
OPENAI_API_KEY=your_openai_api_key

# ============================================
# OPTIONAL SETTINGS  
# ============================================

# Comment generation prompt
COMMENT_PROMPT=gym workout motivation

# Automation behavior
HEADLESS_MODE=true
POST_COMMENT=true

# AdsPower API settings
ADSPOWER_BASE_URL=http://localhost:50325
ADSPOWER_API_KEY=your_adspower_api_key

# Telegram notifications (optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# ============================================
# DEVELOPMENT SETTINGS
# ============================================

# Set to false for testing without real posts
# POST_COMMENT=false

# Set to false to see browser windows  
# HEADLESS_MODE=false 